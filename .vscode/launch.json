{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run FastAPI with Uvicorn",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/backend/src/main/web_app.py",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Run Frontend (npm run dev)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/frontend",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "console": "integratedTerminal"
    }
  ]
}
